name: Turnos en Slack

on:
  schedule:
    - cron: '0 * * * *'  # Esto ejecuta el script cada hora

jobs:
  slack-turnos:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.x'

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install requests pytz

    - name: Run Python script
      env:
        SLACK_TOKEN: ${{ secrets.SLACK_TOKEN }}  # Aseg√∫rate de agregar este secreto en GitHub
      run: python turnos_slack.py
